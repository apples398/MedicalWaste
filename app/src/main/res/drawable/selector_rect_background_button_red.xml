<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 不可用 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/ViewDisabledColor" />
            <stroke android:width="0.5dp" android:color="@android:color/darker_gray" />
        </shape>
    </item>

    <!-- 可用，未获得焦点，没按下 -->
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/colorPrimary" />
            <!--
            <stroke
                android:width="0.5dp"
                android:color="@android:color/black" />
            -->
        </shape>
    </item>

    <!-- 可用，未获得焦点，按下 -->
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/colorPrimaryDark" />
            <!--
            <stroke
                android:width="0.5dp"
                android:color="@android:color/transparent" />
             -->
        </shape>
    </item>

    <!-- 可用，获得焦点，未按下 -->
    <item android:state_enabled="true" android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/colorPrimary" />
            <!--
            <stroke
                android:width="0.5dp"
                android:color="@android:color/black" />
            -->
        </shape>
    </item>

    <!-- 可用，获得焦点，按下 -->
    <item android:state_enabled="true" android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/colorPrimaryDark" />
            <!--
            <stroke
                android:width="0.5dp"
                android:color="@android:color/transparent" />
             -->
        </shape>
    </item>
</selector>
